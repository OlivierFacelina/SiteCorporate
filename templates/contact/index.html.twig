{% extends 'base.html.twig' %}

{% block title %}{{ parent()}} | Contact{% endblock %}

{% block main %}
<h2 class="contact-title">Contact</h2>
<div class="contact">
    <div class="contact__form">
        <h3>Contactez nous</h3>
        <div class="form-row">
            <div class="form-group">
                <label for="lastname">Nom :</label>
                <input type="text" name="lastname" id="lastname" placeholder="Votre nom...">
            </div>
            <div class="form-group">
                <label for="firstname">Prénom :</label>
                <input type="text" name="firstname" id="firstname" placeholder="Votre prénom...">
            </div>
        </div>
        <div class="form-group">
            <label for="email">Email :</label>
            <input type="email" name="email" id="email" placeholder="Votre email...">
        </div>
        <div class="form-group">
            <label for="subject">Objet :</label>
            <input type="text" name="subject" id="subject" placeholder="Votre objet...">
        </div>
        <div class="form-group">
            <label for="message">Message :</label>
            <textarea placeholder="Votre message..."></textarea>
        </div>
        <button type="button">Envoyer</button>
    </div>
    <div class="contact__map">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2487.3316494266164!2d-0.21698862358414114!3d51.43370291608467!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x48760f52612050a5%3A0xeaee595f26abedbd!2sCentre%20Court%20%7C%20Wimbledon!5e0!3m2!1sfr!2sfr!4v1706782663503!5m2!1sfr!2sfr" width="400" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
</div>
{% endblock %}
